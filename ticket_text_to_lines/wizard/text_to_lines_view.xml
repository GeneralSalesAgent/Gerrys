<?xml version="1.0"?>
<odoo>
    <record id="view_text_to_lines_form" model="ir.ui.view">
        <field name="name">ticket.text.form</field>
        <field name="model">ticket.text</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="">
                <group string="">
                    <field name="file_to_upload" filename="file_name"/>
                    <field name="file_name" invisible="1"/>
                    <field name="file_type"/>
                </group>
                <footer>
                    <button name="get_text" string="Proceed" type="object" class="oe_highlight" />
                    <button string="Cancel" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="act_open_text_to_lines_view">
        <field name="name">Upload Text File</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ticket.text</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record model="ir.actions.act_window.view" id="act_open_text_to_lines_view_form">
        <field name="act_window_id" ref="act_open_text_to_lines_view" />
        <field name="sequence" eval="10" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_text_to_lines_form" />
    </record>
</odoo>
